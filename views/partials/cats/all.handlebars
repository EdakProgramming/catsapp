<h2>Cats that are sleepy!</h2>
<ul>
  {{#each cats}}
  	{{#if this.sleepy}}
  		<li>
  			{{cats/details}}
  		</li>
  	{{/if}}
  {{/each}}
</ul>

<h2>Cats that are not sleepy!</h2>
<ul>
  {{#each cats}}
	{{#unless this.sleepy}}
  		<li>
  			{{cats/details}}
  		</li>
  	{{/unless}}
  {{/each}}
</ul>